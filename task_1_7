int var = 3; //global
double sum ( double a , double b ) //local sum
{
return a + b ;
}
int square ( int var ) //local square
{
return var * var ;
}
int main ()
{
for ( int i = 0; i != 100; ++ i ) { //local for-loop
std :: cout << " i ^2 = " << square ( i ) << ’\ n ’; //i ^2
std :: cout << " i + i = " << sum (i , i ) << ’\ n ’; //i *2
}
return 0;
}